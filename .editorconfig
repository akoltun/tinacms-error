# https://EditorConfig.org

root = true

[*]
charset = utf8
end_of_line = lf
insert_final_newline = true

[*.{js,jsx,ts,tsx,graphql,gql,sql,md,html,mjml,json,jsonc,json5,yml,yaml,toml,template,sh,Dockerfile,css,scss}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{md,html,mjml}]
trim_trailing_whitespace = false

[Dockerfile]
indent_style = space
indent_size = 2
